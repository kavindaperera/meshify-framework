<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:key="account_category"
        app:title="@string/settings_category_account">
        <EditTextPreference
            app:iconSpaceReserved="false"
            app:key="username"
            app:title="@string/settings_category_user_name"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <Preference
        app:iconSpaceReserved="false"
        app:title="@string/verify_title"
        app:key="verification"
        app:summary="@string/verify_hint"
        />

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/settings_category_messages">
        <SwitchPreference
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="settings_notifications_enabled"
            app:switchTextOff="true"
            app:title="@string/settings_messages_notifications_title" />

    </PreferenceCategory>


    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/settings_category_mesh_forwarding">
        <DropDownPreference
            app:defaultValue="Default"
            app:entries="@array/profile_entries"
            app:entryValues="@array/profile_values"
            app:iconSpaceReserved="false"
            app:key="settings_profile"
            app:summary="@string/settings_profile_summary"
            app:title="@string/settings_profile_title"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>


    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/settings_category_stats">
        <SwitchPreference
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="settings_logs_enabled"
            app:switchTextOff="true"
            app:summary="@string/settings_stats_logs_summary"
            app:title="@string/settings_stats_logs_title" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:key="help_category"
        app:title="@string/settings_category_help">
        <Preference
            app:iconSpaceReserved="false"
            app:key="feedback"
            app:summary="@string/settings_feedback_summary"
            app:title="@string/settings_feedback_title" />
    </PreferenceCategory>
</PreferenceScreen>